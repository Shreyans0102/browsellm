{
  "manifest_version": 3,
  "name": "BrowseLLM",
  "version": "1.0",
  "description": "Automate your browsing using LLMs.",
  "minimum_chrome_version": "120",
  "background": {
    "service_worker": "sw.js"
  },
  "action": {
    "default_title": "Click to open panel."
  },
  "permissions": ["sidePanel", "scripting", "userScripts", "tabs", "activeTab"],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "icons": {
    "128": "logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*.*"],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "<all_urls>"
    ]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["cs.js"]
  }]
}
